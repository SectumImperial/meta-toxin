include ../title/title.pug

mixin room-data(options = {})
  -
    const {
      items = []
    } = options

    const icons = {
      smile: './assets/decorative/smile.svg',
      city: './assets/decorative/city.svg',
      fire: './assets/decorative/fire.svg',
    } 

  ul.room-data 
    each item in items 
      -
        const {
          title = 'Название пункта',
          text = 'Текст пункта',
          icon = 'smile',
        } = item 

        const dataIcon = icons[icon] ? icons[icon] : icons.smile;

      li.room-data__item 
        .room-data__icon
          case icon
            when 'smile': include ../../assets/decorative/smile.svg 
            when 'city': include ../../assets/decorative/city.svg 
            when 'fire': include ../../assets/decorative/fire.svg 
            default: include ../../assets/decorative/smile.svg 
        span.room-data__title= title
        span.room-data__description= text
