include ../logo/logo.pug
include ../nav/nav.pug
include ../button/button.pug

mixin headerIcon
  .header__icon
    span

mixin header(options = {})
  header.header(
    class = options.classHeader
    )

    +logo({
      classLogo: 'header__logo',
      href: '#'
    })
    +headerIcon()
    .header__nav-wrapper 
      +nav({classNav: 'header__nav'})

      if !options.isLogged
        +button({
          classWrapper: 'header__button', 
          content: 'Войти', 
          btnColor: 'white'
          })
        +button({
          classWrapper: 'header__button', 
          btnColor: 'violet',
          content: 'Зарегистрироваться'})
      else
        p.header__user Юлий Цезарь
