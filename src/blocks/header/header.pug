      classLogo: 'header__logo',
      href: '#'
    })
    +headerIcon()
    .header__nav-wrapper 
      +nav({classNav: 'header__nav',
      items: [
        {
          content: 'О нас',
          href: '#',
          linkActive: 'true'
          },
        {
          content: 'Услуги',
          href: '#',
          subItems: [
            {
              content: 'Пункт меню',
              href: '#'
            },
            {
              content: 'Пункт меню 1',
              href: '#'
            },
            {
              content: 'Пункт меню 2',
              href: '#'
            },
            {
              content: 'Пункт меню 3',
              href: '#'
            }
          ]
        },
        {
          content: 'Вакансии',
          href: '#'
        },
        {
          content: 'Новости',
          href: '#'
        },
        {
          content: 'Соглашения',
          href: '#',
          subItems: [
            {
              content: 'Пункт меню',
              href: '#'
            },
            {
              content: 'Пункт меню 1',
              href: '#'
            },
            {
              content: 'Пункт меню 2',
              href: '#'
            },
            {
              content: 'Пункт меню 3',
              href: '#'
