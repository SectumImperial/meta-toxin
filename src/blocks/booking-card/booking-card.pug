include ../button/button.pug

include ../form/form.pug
include ../form-title/form-title.pug

include ../label/label.pug
include ../input/input.pug

mixin booking-card(options = {})
  section.booking-card
    +form('booking-card__card') 
      +form-title('Найдём номера под ваши пожелания', 'form__title')
      .form__group 
        +label({
          text: 'Прибытие',
          id: 'booking-entry',
          classLabel: 'form__label'
        })
        +input({
          type: 'date',
          id: 'booking-entry',
          classInput: 'form__booking-date'
        }) 
      .form__group
        +label({
          text: 'Выезд',
          id: 'booking-out',
          classLabel: 'form__label'
        })
        +input({
          type: 'date',
          id: 'booking-out',
          classInput: 'form__booking-date'
        }) 
     

      



