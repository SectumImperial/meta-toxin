mixin navItem(options = {}) 
  - 
    const {
      classLi = '',
      href = '',
      classLink = '',
      content = '',
    } = options 


  li(
    class = classLi
  )
   a(
      href = href
      class = classLink
    )= content
   if options.subItems !== ''
    +navSub(options.subItems)


mixin navSub(items = [])
  ul.nav__sublist
    each item in items
      +navItem({
        content: item.content,
        classLink: 'nav__sublink',
        href: item.href}) 

mixin navList(items = [], classList = 'nav__items') 
  ul(class = classList)
    each item in items
      -
        const subItems = item.subItems ? item.subItems : ''
        const {
          content = '',
          link = '#',
          classLi = subItems === '' ? 'nav__item' : 'nav__item nav__subitem',
          classLink = subItems === '' ? 'nav__link' : 'nav__link nav__link_sub __icon-expand'
        } = item
      +navItem({
        content: content,
        classLink: classLink,
        classLi: classLi,
        href: link,
        subItems
        })
       

mixin nav(options = {})
  - 
    const { items = [], 
    classNav = ''
    } = options
  
  nav(
    class = `nav ${classNav}`
    )
      +navList(items)
    



