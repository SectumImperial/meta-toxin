include ../button/button.pug

mixin counter(options = {})
  .counter(
      class =  options.class
  )
    ul.counter__items
      each item in options.items
        li.counter__item
          span.counter__text= item
          .counter__nav
            button(
             class = "counter__btn counter__btn_disabled counter__btn_decrement"
            )= '-'
            span.counter__count 0
            button(
              class = "counter__btn counter__btn_increment"
            )= '+'
    
    