mixin input(options = {})
  - 
    const {
      type = 'text',
      name = '',
      id = '',
      value = '',
      placeholder = '',
      readonly = false,
      pattern = '.*',
      arrow = false,
      isRequired = false,
    } = options

    const arrows = {
      expandMore: 'icon__expand_more',
      forward: 'icon__arrow_forward input_arrow-forward',
    }

  .input
    input(
      type = type
      name = name
      id = id
      class = `input__field`
      value = value 
      placeholder = placeholder
      readonly = readonly
      pattern = pattern
      required = isRequired
    )  
    - if(arrow && arrows[arrow])
      div(
        class = `input_arrow _input_arrow-js ${arrows[arrow]}` 
      )