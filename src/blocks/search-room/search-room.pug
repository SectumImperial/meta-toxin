include ../datepick/datepick.pug
include ../dropdown/dropdown.pug
include ../range-slider/range-slider.pug
include ../title/title.pug
include ../checkbox/checkbox.pug


mixin search-room(options = {}) 
  -
    const {
        classMain = ''
    } = options

  main(
    class = `search-room ${classMain} container`
  )
    section.search-room__filters 
      .search-room__filter-item._datepick-js._datepick-1
        +datepick_1()

      .search-room__filter-item
        +title({
          level: 'h3',
          classTitle: 'search-room__title',
          text: 'Гости'
        })
        +dropdown({
           class: '`search-room__dropdown-input',
           idInput: 'search-room-guests',
           placeholder: 'Сколько гостей',
           mod: 'guests',
           items: [
             'Взрослые', 'Дети', 'Младенцы'
           ],
           plurals: [
             {
               'default': ['гость', 'гостя', 'гостей']
              },
             {
               'Младенцы': ['младенец', 'младенца', 'младенцев']
             }
             
           ]
        })

      .search-room__filter-item
        +range-slider({
          rangeClass: 'search-room__range',
          name: 'Диапазон цены',   
          description: 'Стоимость за сутки пребывания в номере',
          step: 100,
          rangeOptions: {
            min: 0,
            max: 15000,
            initialStart: 5000,
            initialEnd: 10000,
            addedText: '₽',
          }
        })

      .search-room__rules-item
        +title({
          level: 'h3',
          classTitle: 'search-room__title',
          text: 'Правила дома'
        })
        +checkbox({
          classCheckox: 'search-room__checkbox_smoke',
          labelText: 'Можно курить',
          name: 'search-room-smoke',
          id: 'search-room-smoke',
        })



    section.search-room__rooms
      
