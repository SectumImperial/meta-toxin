include ../button/button.pug
include ../input/input.pug

mixin dropdown(options = {})
  - 
    const {
      items = [],
      id = '',
      dataOptions = '',
      placeholder = '',
      plurals = {},
    } = options

  div.dropdown._js-dropdown(
      class = options.class 
      data-options = plurals
  )
    +input({
      type: 'text',
      name: 'dropdown',
      classInput: 'dropdown__input',
      readonly: true,
      placeholder: placeholder,
      id: id,
      arrow: 'expandMore',
      required: true,
    })
    div.dropdown__content
      .dropdown__counter 
        ul.dropdown__items
          each item in items
            li.dropdown__item
              span.dropdown__item-text= item
              .dropdown__items-nav
                button(
                 class = "dropdown__btn dropdown__btn_disabled dropdown__btn_decrement"
                )= '-'
                input.dropdown__count(
                  name= item
                  data-item= item
                  value= 0
                  readonly                 
                  )
                button(
                  class = "dropdown__btn dropdown__btn_increment"
                )= '+'
      .dropdown__nav
        +button({
          content: 'Очистить',
          classWrapper: 'dropdown__button dropdown__button_clear btn-wrapper_transparent',
          classBtn: 'button_color',
          btnColor: 'violet',
          btnWrapperColor: 'transparent',
          border: 'false',
          btnSize: 'tiny',
          btnMod: ['noBorder'],
          
        })
        +button({
          content: 'Применить',
          classWrapper: 'dropdown__button dropdown__button_accept btn-wrapper_transparent',
          classBtn: 'button_color',
          btnColor: 'violet',
          btnWrapperColor: 'transparent',
          border: 'false',
          btnSize: 'tiny',
          btnMod: ['noBorder'],
        })