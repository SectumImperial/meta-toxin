include ../button/button.pug

mixin dropdown(options = {})
  - 
    const {
      items = [],
      id = '',
      dataOptions = '',
      placeholder = '',
      plurals = {},
      classDp = '',
      type = 'guests'
    } = options

  div(
    class = `dropdown _js-dropdown ${classDp}` 
    data-options = plurals
  )
    .dropdown__input-field
      input(
        type = 'text',
        id = id,
        class = 'dropdown__input',
        name = 'dropdown',
        placeholder = placeholder,
        readonly,
      )
      .dropdown__arrow.icon__expand_more._arrow-js 
    div.dropdown__content
      .dropdown__counter 
        ul.dropdown__items
          each item in items
            li.dropdown__item
              span.dropdown__item-text= item
              .dropdown__items-nav
                button(
                 class = "dropdown__btn dropdown__btn_disabled dropdown__btn_decrement"
                )= '-'
                input.dropdown__count(
                  name= item
                  data-item= item
                  value= 0
                  readonly                 
                  )
                button(
                  class = "dropdown__btn dropdown__btn_increment"
                )= '+'
        input(
          type="text"
          class='visually-hidden _dropdown__type',
          name = 'type',
          value = type,
          readonly
          )
      .dropdown__nav
        +button({
          content: 'Очистить',
          classWrapper: 'dropdown__button dropdown__button_clear btn-wrapper_transparent',
          classBtn: 'button_color',
          btnColor: 'violet',
          btnWrapperColor: 'transparent',
          border: 'false',
          btnSize: 'tiny',
          btnMod: ['noBorder'],
          
        })
        +button({
          content: 'Применить',
          classWrapper: 'dropdown__button dropdown__button_accept btn-wrapper_transparent',
          classBtn: 'button_color',
          btnColor: 'violet',
          btnWrapperColor: 'transparent',
          border: 'false',
          btnSize: 'tiny',
          btnMod: ['noBorder'],
        })