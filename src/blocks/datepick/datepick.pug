include ../form/form.pug
include ../input/input.pug
include ../button/button.pug

mixin datepick_2() 
  .datepick._datepick-2._datepick-js
    .datepick__fields
      +form-group({
        classGroup: 'datepick__group'
      })
        +label({
          text: 'Прибытие',
          forInput: 'booking-enter',
          classLabel: 'datepick__label'
        })
        +input({
          type: 'text',
          id: 'booking-enter',
          classInput: 'datepick__input datepick__input_readonly datepick-start _datepickItem _dateInput',
          name: 'datepick-input-start',
          placeholder: 'ДД.ММ.ГГГГ',
          pattern: '[0-9]{2}.[0-9]{2}.[0-9]{4}',
          arrow: 'expandMore',
          required: true,
        })
      +form-group({
        classGroup: 'datepick__group'
      })
        +label({
          text: 'Выезд',
          forInput: 'booking-out',
          classLabel: 'datepick__label'
        })
        +input({
          type: 'text',
          id: 'booking-out',
          classInput: 'datepick__input datepick__input_readonly datepick-end _datepickItem _dateInput',
          name: 'datepick-input-end',
          placeholder: 'ДД.ММ.ГГГГ',
          pattern: '[0-9]{2}.[0-9]{2}.[0-9]{4}',
          arrow: 'expandMore',
          required: true,
        })

    .datepick__container
      .datepick_btns
        +button({
          content: 'Очистить',
          classWrapper: 'datepick__button datepick__button_clear btn-wrapper_transparent',
          classBtn: 'button_color',
          btnColor: 'violet',
          btnWrapperColor: 'transparent',
          border: 'false',
          btnSize: 'tiny',
          btnMod: ['noBorder'],
        })
        +button({
          content: 'Применить',
          classWrapper: 'datepick__button datepick__button_accept btn-wrapper_transparent',
          classBtn: 'button_color',
          btnColor: 'violet',
          btnWrapperColor: 'transparent',
          border: 'false',
          btnSize: 'tiny',
          btnMod: ['noBorder'],
        })

mixin datepick_1(options = {})
  .datepick._datepick-1._datepick-js
    +form-group({
      classGroup: 'datepick__group'
    })
      +label({
        text: 'даты пребывания в отеле',
        forInput: 'booking-dates',
        classLabel: 'datepick__label'
        })
      +input({
        type: 'text',
        id: 'booking-dates',
        classInput: 'datepick__input datepick__input_readonly datepick-dates _datepickItem __icon-expand',
        name: 'datepick-input-dates',
        datepicker: true,
        placeholder: 'дд.мм - дд.мм',
        inputMod: ['arrow'],
        readonly: true
      })

    .datepick__container.datepick_small
      .datepick_btns
        +button({
          content: 'Очистить',
          classWrapper: 'datepick__button datepick__button_clear btn-wrapper_transparent',
          classBtn: 'button_color',
          btnColor: 'violet',
          btnWrapperColor: 'transparent',
          border: 'false',
          btnSize: 'tiny',
          btnMod: ['noBorder'],
        })
        +button({
          content: 'Применить',
          classWrapper: 'datepick__button datepick__button_accept btn-wrapper_transparent',
          classBtn: 'button_color',
          btnColor: 'violet',
          btnWrapperColor: 'transparent',
          border: 'false',
          btnSize: 'tiny',
          btnMod: ['noBorder'],
        })
