include ../form/form.pug
include ../input/input.pug
include ../button/button.pug

mixin datepick_2() 
  .datepick
    .datepick__fields
      +form-group({
        classGroup: 'datepick__group'
      })
        +label({
          text: 'Прибытие',
          forInput: 'booking-enter',
          classLabel: 'datepick__label'
        })
        +input({
          type: 'text',
          id: 'booking-enter',
          classInput: 'datepick__input datepick__input_readonly datepick-start _datepickItem __icon-expand _dateInput',
          datepicker: true,
          placeholder: 'ДД.ММ.ГГГГ',
          pattern: '[0-9]{2}.[0-9]{2}.[0-9]{4}',
          inputMod: ['arrow'],
          required: true,
        })
      +form-group({
        classGroup: 'datepick__group'
      })
        +label({
          text: 'Выезд',
          forInput: 'booking-out',
          classLabel: 'datepick__label'
        })
        +input({
          type: 'text',
          id: 'booking-out',
          classInput: 'datepick__input datepick__input_readonly datepick-end _datepickItem _dateInput',
          datepicker: true,
          placeholder: 'ДД.ММ.ГГГГ',
          pattern: '[0-9]{2}.[0-9]{2}.[0-9]{4}',
          inputMod: ['arrow'],
          required: true,
        })
  .datepick_container
    .datepick_btns
      +button({
        content: 'Очистить',
        classWrapper: 'datepick__button datepick__button_clear btn-wrapper_transparent',
        classBtn: 'button_color',
        btnColor: 'violet',
        btnWrapperColor: 'transparent',
        border: 'false',
        btnSize: 'tiny',
        btnMod: ['noBorder'],
      })
      +button({
        content: 'Применить',
        classWrapper: 'datepick__button datepick__button_accept btn-wrapper_transparent',
        classBtn: 'button_color',
        btnColor: 'violet',
        btnWrapperColor: 'transparent',
        border: 'false',
        btnSize: 'tiny',
        btnMod: ['noBorder'],
      })