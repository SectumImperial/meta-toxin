block variables
  -
    const description = "Поиск номеров отеля Toxin"
    const keywords = "Отель, Toxin, номера, отдых, ночлег, шампунь"

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="description" content=description)
    meta(name="keywords" content=keywords)
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title #{title} 
    link(rel="icon" type="image/svg" sizes="any" href="../favicon/favicon.svg")
    link(rel="manifest" href="../common/manifest.json")
  body.page
    block content
  